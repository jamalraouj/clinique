                <td>{{ user.derniereConexion ? user.derniereConexion|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>User_role</th>
                <td>{{ user.userRole }}</td>
            </tr>
            <tr>
                <th>Mise_a_jour_a</th>
                <td>{{ user.miseAJourA ? user.miseAJourA|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

