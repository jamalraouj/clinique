{% extends 'base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %}
{{ dump(patients) }}
{# {% exit %} #}


    <h1>Patient index</h1>
    <a href="{{ path('app_patient_new') }}">Create new</a>

        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-sm-4 col-3">
                        <h4 class="page-title">Patients</h4>
                    </div>
                    <div class="col-sm-8 col-9 text-right m-b-20">
                        <a href="{{ path('app_patient_new') }}" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Add Patient</a>
                    </div>
                </div>
				<div class="row">
					<div class="col-md-12">
						<div class="table-responsive">
							<table class="table table-border table-striped custom-table datatable mb-0">
								<thead>
									<tr>
										<th>Nom et Prenom</th>
										<th>Age</th>
										<th>Adresse</th>
										<th>Téléphone</th>
                                        <th>Status</th>
                                        <th>Chambre et lit</th>
                                        <th>Rejoint à</th>
                                        <th>mettre à jour</th>
										<th class="text-right">Action</th>
									</tr>
								</thead>
								<tbody>
                                {% for patient in patients %}
                                
                                    <tr>
                                        <td>{{patient.nom}} - {{ patient.prenom}}</td>
                                        <td>{{patient.age}}</td>
                                        <td>{{patient.address}}</td>
                                        <td>{{patient.telephone}}</td>
                                        <td>{{status[patient.status_patient]}}</td>
                                        <td>chamber</td>
                                        <td>{{ patient.joindre_a ? patient.joindre_a|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>{{ patient.mise_a_jour_a ? patient.mise_a_jour_a|date('Y-m-d H:i:s') : '' }}</td>
                                        
                                        <td class="text-right">
											<div class="dropdown dropdown-action">
												<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
												<div class="dropdown-menu dropdown-menu-right">
													<a class="dropdown-item" href="{{ path('app_patient_edit', {'id': patient.id}) }}"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                                    <a class="dropdown-item" href="{{ path('app_patient_show', {'id': patient.id}) }}"><i class="fa fa-pencil m-r-5"></i> show</a>
													{# <a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_patient"><i class="fa fa-trash-o m-r-5"></i> Delete</a> #}
												</div>
											</div>
										</td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="9">no records found</td>
                                    </tr>
                                {% endfor %}
									
								</tbody>
							</table>
						</div>
					</div>
                </div>
            </div>
			
		</div>
{% endblock %}