{% extends 'base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %}
{# {{ dump(patients) }} #}
{# {% exit %} #}

{# {{ dump(status) }} #}

    <h1>Patient index</h1>
        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-sm-4 col-3">
                        <h4 class="page-title">Patients</h4>
                    </div>
                    <div class="col-sm-8 col-9 text-right m-b-20">
                        <a href="{{ path('app_patient_new') }}" class="btn btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Add Patient</a>
                    </div>
                </div>
				<div class="row">
					<div class="col-md-12">
						<div class="table-responsive">
							<table class="table table-border table-striped custom-table datatable mb-0">
								<thead>
									<tr>
										<th>Nom et Prenom</th>
										<th>Age</th>
										<th>Adresse</th>
										<th>Téléphone</th>
                                        <th>Chambre et lit</th>
                                        <th>Rejoint à</th>
                                        <th>mettre à jour</th>
                                        <th>Status</th>
										<th class="text-right">Action</th>
									</tr>
								</thead>
								<tbody>
                                {% for patient in patients %}
                                
                                    <tr>
                                        <td>{{patient.nom}} - {{ patient.prenom}}</td>
                                        <td>{{patient.age}}</td>
                                        <td>{{patient.address}}</td>
                                        <td>{{patient.telephone}}</td>
                                        

                                        <td>chamber</td>
                                        <td>{{ patient.joindre_a ? patient.joindre_a|date('Y-m-d H:i:s') : '' }}</td>
                                        <td>{{ patient.mise_a_jour_a ? patient.mise_a_jour_a|date('Y-m-d H:i:s') : '' }}</td>
                                        <td class="text-center">
                                            <div class="dropdown action-label">
                                                <a class="custom-badge status-purple dropdown-toggle" href="#" data-toggle="dropdown" aria-expanded="false" id="statusPatient">
                                                {{ status[patient.status_patient]}}
                                                </a>
                                                <div class="dropdown-menu dropdown-menu-right overflow-auto">
                                                {% for key , i in status %}
                                                    <a class="dropdown-item" href="{{ path('patient_change_status', {'id': patient.id , 'status': key}) }}">{{ i }}</a>                  
                                                {% endfor %}
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-right ">
											<div class="dropdown dropdown-action">
												<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
												<div class=" dropdown-menu dropdown-menu-right">
													<a class="text-info dropdown-item" href="{{ path('app_patient_edit', {'id': patient.id}) }}"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                                    <a class="text-info dropdown-item" href="{{ path('app_patient_show', {'id': patient.id}) }}"><i class="fa fa-pencil m-r-5"></i> show</a>
                                                    <a class="text-info dropdown-item" href="{{ path('app_patient_dossier_show_', {'id': patient.id}) }}"><i class="fa fa-pencil m-r-5"></i> show Dossiers</a>
                                                    <a class="text-info dropdown-item" href="{{ path('app_dossier_new', {'id': patient.id}) }}"><i class="fa fa-pencil m-r-5"></i> create Dossier</a>
                                                    <a class="text-danger dropdown-item" >{{ include('patient/_delete_form.html.twig') }}</a>
                                                    {# <a class="text-danger dropdown-item" href="{{ path('app_patient_delete' , {'id': patient.id})}}"><i class=" fa fa-trash-o m-r-5"></i> Delete</a> #}
                                                    
													{# <a class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_patient"><i class="fa fa-trash-o m-r-5"></i> Delete</a> #}
												</div>
											</div>
										</td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="9">no records found</td>
                                    </tr>
                                {% endfor %}
									
								</tbody>
							</table>
						</div>
					</div>
                </div>
            </div>
			
		</div>
        <script>
        var statusPatientElement = document.getElementById("statusPatient") ;
        let color , bgColor , border_text_color ;
        let statusPatient = statusPatientElement.innerHTML.trim() ;
         // Function that checks Patient Status and Give a certain color for each state
          statusPatientElement.onclick = getPatientStatus() ;       
         function getPatientStatus() {

            if( statusPatient == "s'épuiser") {
                bgColor = "#fad5d9" ; border_text_color = "red" ; 
            }else if (statusPatient == "en cours") {
                bgColor = "#d6ffdb" ; border_text_color = "green" ; 

            }else if (statusPatient == "il a rendez-vous") {
                bgColor = "#d6fffa" ; border_text_color = "#538c85" ; 

            }else if (statusPatient == "il a quitté") {
                bgColor = "#dcdcdc" ; border_text_color = "#888" ; 

            }else if (statusPatient == "il a été hospitalisé") {
                bgColor = "#ffe9a9" ; border_text_color = "black" ; 

            }else if (statusPatient == "il a été défibéré") {
                bgColor = "#ffc1f9" ; border_text_color = "brown" ; 

            }else if (statusPatient == "il a été décédé") {
                bgColor = "#a4a4a4" ; border_text_color = "white" ; 

            }else if (statusPatient == "il a été guéri") {
                bgColor = "#6b9069" ; border_text_color = "white" ; 

            }else if (statusPatient == "il a été malade") {
                bgColor = "#f3e7fd" ; border_text_color = "#8f13fd" ; 

            }else if (statusPatient == "il a été malade grave") {
                bgColor = "#ffffff" ; border_text_color = "#a581c2" ; 

            }
            statusPatientElement.setAttribute("style",`background-color: ${bgColor} ; color: ${border_text_color} ; border-color : ${border_text_color} ;`);

        }
        </script>
{% endblock %}