{% extends 'base.html.twig' %}

{% block title %}Chambre index{% endblock %}

{% block body %}
    <h1>Chambre index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Status</th>
                <th>Type</th>
                <th>Description</th>
                <th>Creer_a</th>
                <th>Mise_a_jour_a</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chambre in chambres %}
            <tr>
                <td>{{ chambre.id }}</td>
                <td>{{ chambre.nombre }}</td>
                <td>{{ chambre.status }}</td>
                <td>{{ chambre.type }}</td>
                <td>{{ chambre.Description }}</td>
                <td>{{ chambre.creerA ? chambre.creerA|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ chambre.miseAJourA ? chambre.miseAJourA|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_chambre_show', {'id': chambre.id}) }}">show</a>
                    <a href="{{ path('app_chambre_edit', {'id': chambre.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_chambre_new') }}">Create new</a>
{% endblock %}
