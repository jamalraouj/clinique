{% extends 'base.html.twig' %}

{% block title %}Medecin index{% endblock %}
{% block body %}
<div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-sm-4 col-3">
                        <h4 class="page-title">Doctors</h4>
                    </div>
                    <div class="col-sm-8 col-9 text-right m-b-20">
                        <a href="{{ path('app_medecin_new') }}" class="btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Add Doctor</a>
                    </div>
                </div>
				<div class="row doctor-grid">
                    {% for medecin in medecins %}
                    <div class="col-md-4 col-sm-4  col-lg-3">
                        <div class="profile-widget">
                            <div class="doctor-img">
                                <a class="avatar" href="{{ path('app_medecin_show', {'id': medecin.id}) }}"><img alt="" src="https://img.freepik.com/free-photo/doctor-with-his-arms-crossed-white-background_1368-5790.jpg?w=2000"></a>
                            </div>
                            <div class="dropdown profile-action">
                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="{{ path('app_medecin_edit', {'id': medecin.id}) }}"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                    <a class="dropdown-item" href="{{ path('app_medecin_delete', {'id': medecin.id}) }}" data-toggle="modal" data-target="#delete_doctor" ><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                </div>
                            </div>
                            <h4 class="doctor-name text-ellipsis"><a href="profile.html">{{ medecin.matricule }}</a></h4>
                            <div class="doc-prof">{{ medecin.specialite }}</div>
                            <div class="user-country">
                                <i class="fa fa-map-marker"></i>{{ medecin.statusMedecin }}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <span class="fw-bolder text-center">no records found</span>
                {% endfor %}
                </div>
				{# <div class="row">
                    <div class="col-sm-12">
                        <div class="see-all">
                            <a class="see-all-btn" href="javascript:void(0);">Load More</a>
                        </div>
                    </div>
                </div> #}
            </div>
    <script>
        $( document ).ready(function() {
            $("#Patients").removeClass("active");
            $("#Doctors").addClass("active");
        });
    </script>
{% endblock %}