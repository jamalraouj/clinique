{% extends 'base.html.twig' %}

{% block title %}Edit Medecin{% endblock %}

{% block body %}
   <main id="mainEditMedecin"> 
    <h1>Edit Medecin</h1>
        <div><div class="stepBullets mx-2 d-inline-block greenBullet" id="bullet1"></div><div class="stepBullets mx-2 d-inline-block" id="bullet2"></div></div>
    {{ form_start(medecinForm ,{ 'attr' : { 'class': 'w-50 ' } , 'enctype' : 'multipart/form-data' }) }}
    <div class="userForm w-100">
                    <p>{{ form_row(form.nom) }}</p>
                    <p>{{ form_row(form.prenom) }}</p>
                    <p>{{ form_row(form.age) }}</p>
                    <p>{{ form_row(form.telephone) }}</p>
                    <p>{{ form_row(form.cin) }}</p>
                    <p>{{ form_row(form.address) }}</p>
                    <p>{{ form_row(form.email) }}</p>
                </div>
                <div class="medecinForm">
                    {{ form_widget(medecinForm) }}
                </div>
                <button class="btn btn-success w-100 text-center my-3" id="SaveDoctorButt">Update</button>
{{ form_end(medecinForm) }}
   <button class="btn btn-success mt-3 w-25 formsButts" id="nextButt">Next</button>
    <button class="btn btn-secondary mt-3 w-25 formsButts" id="prevButt">Previous</button>
    <a class="btn btn-primary mt-3 w-25 mb-3 formsButts" href="{{ path('app_medecin_index') }}">back to list</a>

    {# {{ include('medecin/_delete_form.html.twig') }} #}
   </main>
    <script>
        // Toggling the active class from the patient icon to a doctor
        $("#Patients").removeClass("active");
        $("#Doctors").addClass("active");
    </script> 
{% endblock %}
