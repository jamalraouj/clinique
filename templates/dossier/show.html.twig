{% extends 'base.html.twig' %}

{% block title %}Dossier{% endblock %}

{% block body %}
    <h1>Dossier</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dossier.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ dossier.title }}</td>
            </tr>
            <tr>
                <th>Date_maintenant</th>
                <td>{{ dossier.dateMaintenant ? dossier.dateMaintenant|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Cahier_sante</th>
                <td>{{ dossier.cahierSante ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Prix_avance</th>
                <td>{{ dossier.prixAvance }}</td>
            </tr>
            <tr>
                <th>Prix_restant</th>
                <td>{{ dossier.prixRestant }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ dossier.prix }}</td>
            </tr>
            <tr>
                <th>Status_dossier</th>
                <td>{{ dossier.statusDossier }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_dossier_index') }}">back to list</a>

    <a href="{{ path('app_dossier_edit', {'id': dossier.id}) }}">edit</a>

    {{ include('dossier/_delete_form.html.twig') }}
{% endblock %}
